{
  "name": "payment-service",
  "version": "1.0.0",
  "description": "Payment microservice for handling Razorpay transactions",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker build -t payment-service .",
    "docker:run": "docker run -p 3000:3000 --env-file .env payment-service",
    "setup": "chmod +x scripts/setup-environment.sh && ./scripts/setup-environment.sh",
    "setup:env": "cp .env.example .env && echo 'Please edit .env file with your credentials'",
    "test:config": "node test-config.js",
    "test:redis": "node scripts/test-redis-cloud.js",
    "test:redis:performance": "node scripts/test-redis-cloud.js --performance",
    "redis:start": "docker-compose -f docker-compose.redis.yml up -d",
    "redis:stop": "docker-compose -f docker-compose.redis.yml down"
  },
  "dependencies": {
    "@bull-board/api": "^5.10.4",
    "@bull-board/express": "^5.10.4",
    "@bull-board/ui": "^5.10.4",
    "@supabase/supabase-js": "^2.38.4",
    "bullmq": "^4.15.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pino-pretty": "^10.2.3",
    "razorpay": "^2.9.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "keywords": ["payment", "razorpay", "microservice", "express"],
  "author": "",
  "license": "ISC"
}